{
    "name": "consulio-ai-copilot-pro",
    "version": "2.0.0",
    "description": "AI Co-Pilota Pro v2.0 - Sistema di assistenza AI per consulenti professionali",
    "main": "resources/js/ai-copilot/main.js",
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "build": "npm run production",
        "lint": "eslint resources/js --ext .js",
        "lint:fix": "eslint resources/js --ext .js --fix",
        "test": "jest",
        "test:watch": "jest --watch"
    },
    "keywords": [
        "ai",
        "copilot",
        "assistant",
        "laravel",
        "javascript",
        "speech-recognition",
        "consulting"
    ],
    "author": "Consulio Team",
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "^7.22.0",
        "@babel/plugin-proposal-class-properties": "^7.18.0",
        "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.0",
        "@babel/plugin-proposal-optional-chaining": "^7.21.0",
        "@babel/preset-env": "^7.22.0",
        "autoprefixer": "^10.4.14",
        "babel-loader": "^9.1.0",
        "browser-sync": "^2.29.0",
        "browser-sync-webpack-plugin": "^2.3.0",
        "css-loader": "^6.8.0",
        "eslint": "^8.42.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-import": "^2.27.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^6.1.0",
        "jest": "^29.5.0",
        "laravel-mix": "^6.0.49",
        "postcss": "^8.4.24",
        "resolve-url-loader": "^5.0.0",
        "sass": "^1.63.0",
        "sass-loader": "^13.3.0",
        "style-loader": "^3.3.0",
        "webpack": "^5.88.0",
        "webpack-cli": "^5.1.0",
        "worker-loader": "^3.0.8"
    },
    "dependencies": {
        "axios": "^1.4.0",
        "lodash": "^4.17.21"
    },
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8.0.0"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead",
        "not ie 11"
    ],
    "jest": {
        "testEnvironment": "jsdom",
        "setupFilesAfterEnv": [
            "<rootDir>/tests/js/setup.js"
        ],
        "moduleNameMapping": {
            "^@/(.*)$": "<rootDir>/resources/js/$1",
            "^@ai-copilot/(.*)$": "<rootDir>/resources/js/ai-copilot/$1",
            "^@components/(.*)$": "<rootDir>/resources/js/ai-copilot/components/$1",
            "^@services/(.*)$": "<rootDir>/resources/js/ai-copilot/services/$1",
            "^@utils/(.*)$": "<rootDir>/resources/js/ai-copilot/utils/$1"
        },
        "testMatch": [
            "**/tests/js/**/*.test.js"
        ],
        "collectCoverageFrom": [
            "resources/js/**/*.js",
            "!resources/js/bootstrap.js",
            "!**/node_modules/**"
        ]
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es2021": true,
            "node": true,
            "jest": true
        },
        "extends": [
            "standard"
        ],
        "parserOptions": {
            "ecmaVersion": 12,
            "sourceType": "module"
        },
        "rules": {
            "indent": ["error", 4],
            "semi": ["error", "always"],
            "quotes": ["error", "single"],
            "no-console": "warn",
            "no-debugger": "warn",
            "no-unused-vars": "warn"
        },
        "globals": {
            "window": "readonly",
            "document": "readonly",
            "navigator": "readonly",
            "console": "readonly",
            "AudioContext": "readonly",
            "webkitAudioContext": "readonly",
            "MediaRecorder": "readonly"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/consulio/ai-copilot-pro.git"
    },
    "bugs": {
        "url": "https://github.com/consulio/ai-copilot-pro/issues"
    },
    "homepage": "https://github.com/consulio/ai-copilot-pro#readme"
}

